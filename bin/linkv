#!/usr/bin/env node

var child_process = require('child_process'),
    async         = require('async'),
    commander     = require('commander'),
    linkv         = require(__dirname + '/../index'),
    pkj           = require(__dirname + '/../package.json');

commander
  .version(pkj.version)
  .option('-v, --clipbord', 'use url from clipboard (mac only)')
  .option('-c, --copy', 'copy to clipboard (mac only)')
  .option('-t, --html', 'output link as html')
  .option('-m, --markdown', 'output link as markdown')
  .parse(process.argv);

var urls = commander.args;
var clipboard = [];

if (!urls.length) {
	console.error('please enter a url.');
	process.exit(1);
}

var type = null;
if (commander.html) {
	type = 'html';
} else if (commander.markdown) {
	type = 'markdown';
}

async.forEach(commander.args, function (url, callback) {
	linkv(url, type, function (err, result) {
		if (err) {
			console.error(err);
			process.exit(1);
		}

		console.log(result);
		if (commander.copy) {
			clipboard.push(result);
		}
		callback();
	});
}, function () {
	if (!commander.copy) {
		return;
	}

	var cbtext = clipboard
		.join('\n')
		.replace(/"/g, '\\"');

	child_process.exec(
		'echo "' + cbtext + '" | pbcopy',
		function (err, res) {
			if (err) {
				console.error(err);
				process.exit(1);
			}
			console.log('copied to clipboard.');
		}
	);
});